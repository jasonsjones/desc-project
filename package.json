{
    "private": true,
    "name": "desc",
    "workspaces": {
        "packages": [
            "packages/api",
            "packages/app",
            "packages/e2e"
        ],
        "nohoist": [
            "**/typeorm/**",
            "**/typeorm"
        ]
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "clean": "lerna clean",
        "dev": "lerna run dev --stream --scope @desc/api --scope @desc/app",
        "dev:api": "lerna run dev --stream --scope @desc/api",
        "dev:app": "lerna run start --stream --scope @desc/app",
        "lint:all": "lerna run lint --stream --scope @desc/api --scope @desc/app",
        "lint:api": "lerna run lint --stream --scope @desc/api",
        "lint:app": "lerna run lint --stream --scope @desc/app",
        "postinstall": "yarn bootstrap",
        "test:api": "lerna run test --stream --scope @desc/api",
        "test:app:all": "lerna run test --stream --scope @desc/app -- --colors --watchAll=false",
        "test:app:watch": "lerna run test --stream --scope @desc/app -- --colors",
        "test:e2e": "lerna run test:e2e --stream",
        "prepare": "husky install"
    },
    "license": "MIT",
    "devDependencies": {
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "lerna": "4.0.0",
        "prettier": "2.5.1",
        "pretty-quick": "3.1.2"
    },
    "resolutions": {
        "react-error-overlay": "6.0.9"
    },
    "engines": {
        "node": ">=14.16.0 <17.0.0",
        "yarn": ">=1.22.0"
    }
}
